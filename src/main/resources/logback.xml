<configuration>

    <!-- Define a pattern with color codes -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %logger{36}:%L - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Define the color highlighting for different log levels -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %logger{36}:%L - %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- Optional: Define specific loggers with different levels if needed -->
    <!--<logger name="com.zaxxer.hikari" level="debug"/>-->

</configuration>
